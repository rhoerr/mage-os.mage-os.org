---
import Layout from '~/layouts/PageLayout.astro';

import PageHero from '~/components/widgets/PageHero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Note from '~/components/widgets/Note.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Swag Store | Mage-OS',
  description:
    'Shop official Mage-OS merchandise including polo shirts, hoodies, caps, and accessories. Show your support for open-source commerce.',
};

const storeUrl = 'https://mage-os.myspreadshop.com';
---

<Layout metadata={metadata}>
  <PageHero
    tagline="Swag Store"
    variant="gradient"
    actions={[
      {
        variant: 'primary',
        text: 'Visit Store',
        href: storeUrl,
        target: '_blank',
        icon: 'tabler:shopping-bag',
      },
      { text: 'Become a Brand Ambassador', href: '/about/brand-ambassador' },
    ]}
  >
    <Fragment slot="title">
      Mage-OS <span class="text-accent dark:text-white">Swag Store</span>
    </Fragment>

    <Fragment slot="subtitle">
      Wear your support for open-source commerce. Grab official Mage-OS apparel and accessories from our swag store.
    </Fragment>
  </PageHero>

  <Note
    title="Select Your Country"
    description="For the best delivery service and currency options, select your country in the Spreadshop footer when visiting the store."
    icon="tabler:world"
  />

  <!-- Featured Products -->
  <Features
    id="products"
    tagline="Featured Products"
    title="Official Mage-OS Merchandise"
    subtitle="High-quality apparel and accessories featuring the Mage-OS logo. Perfect for conferences, meetups, or everyday wear."
    items={[
      {
        title: 'Polo Shirts',
        description:
          'Professional polo shirts featuring the Mage-OS logo mark. Perfect for conferences, client meetings, or representing the community at events.',
        icon: 'tabler:shirt',
        callToAction: {
          text: 'Shop Polos',
          href: storeUrl,
          target: '_blank',
        },
      },
      {
        title: 'Hoodies',
        description:
          'Comfortable hoodies with Mage-OS branding. Stay warm during those late-night coding sessions or cold conference halls.',
        icon: 'tabler:jacket',
        callToAction: {
          text: 'Shop Hoodies',
          href: storeUrl,
          target: '_blank',
        },
      },
      {
        title: 'Baseball Caps',
        description:
          'Classic baseball caps with the Mage-OS logo. A casual way to show your support for open-source commerce.',
        icon: 'tabler:crown',
        callToAction: {
          text: 'Shop Caps',
          href: storeUrl,
          target: '_blank',
        },
      },
      {
        title: 'Accessories',
        description:
          'Stickers, mugs, bags, and more. Complete your Mage-OS collection with our range of branded accessories.',
        icon: 'tabler:gift',
        callToAction: {
          text: 'Shop Accessories',
          href: storeUrl,
          target: '_blank',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <!-- Shop Categories -->
  <Features2
    title="Shop by Category"
    tagline="Collections"
    columns={3}
    items={[
      {
        title: "Men's Apparel",
        description: 'T-shirts, polos, hoodies, and more sized for men.',
        icon: 'tabler:man',
        callToAction: {
          text: 'Shop Men',
          href: storeUrl,
          target: '_blank',
        },
      },
      {
        title: "Women's Apparel",
        description: 'T-shirts, polos, hoodies, and more sized for women.',
        icon: 'tabler:woman',
        callToAction: {
          text: 'Shop Women',
          href: storeUrl,
          target: '_blank',
        },
      },
      {
        title: 'Accessories',
        description: 'Caps, bags, mugs, stickers, and other branded items.',
        icon: 'tabler:package',
        callToAction: {
          text: 'Shop Accessories',
          href: storeUrl,
          target: '_blank',
        },
      },
    ]}
  />

  <!-- Brand Ambassador CTA -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Visit the Swag Store',
        href: storeUrl,
        target: '_blank',
        icon: 'tabler:shopping-bag',
      },
      {
        text: 'Become a Brand Ambassador',
        href: '/about/brand-ambassador',
        icon: 'tabler:award',
      },
    ]}
  >
    <Fragment slot="title"> Represent the Community </Fragment>

    <Fragment slot="subtitle">
      Every purchase supports the Mage-OS community. Interested in representing Mage-OS at events? Join our Brand
      Ambassador Program for exclusive swag and recognition.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </CallToAction>
</Layout>
