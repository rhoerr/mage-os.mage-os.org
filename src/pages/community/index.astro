---
import Layout from '~/layouts/PageLayout.astro';

import PageHero from '~/components/widgets/PageHero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Steps from '~/components/widgets/Steps.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import PartnerTiers from '~/components/widgets/PartnerTiers.astro';
import PartnersGrid from '~/components/widgets/PartnersGrid.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import { getCommunityStats } from '~/utils/openCollective';

import communityGroup from '~/assets/images/blog/2025/groupe-drone-1.jpg';

const stats = await getCommunityStats();

const metadata = {
  title: 'Community | Mage-OS',
  description:
    'Join the Mage-OS community. Contribute code, attend events, and connect with developers and merchants worldwide. Open to all skill levels.',
  openGraph: {
    images: [{ url: '/og/page/community.png', width: 1200, height: 630 }],
  },
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <PageHero
    tagline="Community"
    variant="gradient"
    actions={[
      {
        variant: 'primary',
        text: 'Join Discord',
        href: '/discord-channel',
        icon: 'tabler:brand-discord',
      },
      { text: 'Become a Member', href: 'https://opencollective.com/mage-os', target: '_blank', icon: 'tabler:heart' },
    ]}
  >
    <Fragment slot="title">
      Built by the Community, <span class="text-accent dark:text-white">For the Community</span>
    </Fragment>

    <Fragment slot="subtitle">
      Mage-OS thrives because of contributions from people like you. Whether you are a developer contributing code, an
      agency shaping the platform, or a merchant driving requirements—there is a place for you here.
    </Fragment>
  </PageHero>

  <!-- Note Widget ******************* -->

  <Note
    title="Open, Positive, and Inclusive"
    description="We welcome everyone. Read our Code of Conduct to learn more about our values."
    icon="tabler:heart-handshake"
    callToAction={{ text: 'Read Code of Conduct', href: '/code-of-conduct' }}
  />

  <!-- Current Partners Grid ****************** -->

  <PartnersGrid
    title="Our Partners"
    subtitle="These organizations are actively supporting Mage-OS operations and development"
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Discord Members', amount: `1350+`, icon: 'tabler:users' },
      { title: 'Financial Contributors', amount: `${stats.totalContributors}+`, icon: 'tabler:heart' },
      { title: 'Professional Members', amount: `${stats.professionalMembers}+`, icon: 'tabler:briefcase' },
      { title: 'Partner Companies', amount: `${stats.partnerCompanies}+`, icon: 'tabler:building' },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </Stats>

  <!-- Steps Widget: Getting Started Journey ****************** -->

  <Steps
    title="New to Mage-OS? Start Here"
    tagline="Your First Steps"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Join the Conversation</span>',
        description:
          'Introduce yourself on Discord in the #general channel. Our community is welcoming and happy to help newcomers find their way.',
        icon: 'tabler:message-circle',
      },
      {
        title: 'Step 2: <span class="font-medium">Attend a Weekly Meeting</span>',
        description:
          'Join our Tuesday tech meeting at 3 PM CET. Listen in, ask questions, and learn how the project works. No prior experience needed.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Step 3: <span class="font-medium">Find Your First Contribution</span>',
        description:
          'Look for "good first issue" labels on GitHub, help with documentation, or share your Mage-OS experience on social media.',
        icon: 'tabler:git-pull-request',
      },
      {
        title: 'Welcome to the Community!',
        description:
          'You are now part of a global network of developers, agencies, and merchants building the future of open-source commerce.',
        icon: 'tabler:confetti',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1522202176988-66273c2fd55f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Person taking first steps on a path, representing the beginning of their community journey',
    }}
  />

  <!-- Features Widget: Ways to Contribute *************** -->

  <Features
    tagline="Get Involved"
    title="Ways to Contribute"
    subtitle="Every contribution matters—from code to community support. Start anywhere that matches your skills and interests."
    items={[
      {
        title: 'Contribute Code',
        description:
          'Submit pull requests for bug fixes, performance improvements, or new features. Recent contributions include PCI DSS 4.0 compliance, AI-powered translations, and PageBuilder enhancements.',
        icon: 'tabler:code',
        callToAction: {
          text: 'View GitHub',
          href: 'https://github.com/mage-os',
          target: '_blank',
        },
      },
      {
        title: 'Join Working Groups',
        description:
          'Contribute to Technical or Documentation working groups. Led by experienced community members, these teams drive platform development and maintain DevDocs.',
        icon: 'tabler:users-group',
        callToAction: {
          text: 'Meet Contributors',
          href: '/about/contributors',
        },
      },
      {
        title: 'Become a Member',
        description:
          'Support the project financially and gain voting rights in our democratic governance. Choose from Community, Professional, or Partner tiers.',
        icon: 'tabler:heart',
        callToAction: {
          text: 'View Membership Options',
          href: 'https://opencollective.com/mage-os',
          target: '_blank',
        },
      },
      {
        title: 'Help with Documentation',
        description:
          'Improve installation guides, write module tutorials, document APIs, or translate content for international communities.',
        icon: 'tabler:book',
        callToAction: {
          text: 'View DevDocs',
          href: 'https://devdocs.mage-os.org',
          target: '_blank',
        },
      },
      {
        title: 'Test & Report',
        description:
          'Test new releases on your development environments, report bugs with reproduction steps, or help triage existing issues.',
        icon: 'tabler:bug',
        callToAction: {
          text: 'Report Issues',
          href: 'https://github.com/mage-os/mageos-magento2/issues',
          target: '_blank',
        },
      },
      {
        title: 'Become a Brand Ambassador',
        description:
          'Represent Mage-OS at events, create content, and help grow the community. Ambassadors receive exclusive swag and recognition.',
        icon: 'tabler:award',
        callToAction: {
          text: 'Learn More',
          href: '/about/brand-ambassador',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <!-- Features3 Widget: Global Community ****************** -->

  <Features3
    title="A Global Community"
    subtitle="Mage-OS brings together contributors from around the world. Join your local chapter or connect with the global community."
    tagline="Local Chapters"
    columns={4}
    items={[
      {
        title: 'Netherlands',
        description: 'The first formally founded Mage-OS local group, reviving the Dutch Magento community.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join NL',
          href: 'https://nl.mage-os.org/',
          target: '_blank',
        },
      },
      {
        title: 'Germany',
        description: 'Active German-speaking community with regular meetups and contributions.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join DE',
          href: 'https://discord.gg/sRwHmpTrJM',
          target: '_blank',
        },
      },
      {
        title: 'France',
        description: 'French Mage-OS community sharing knowledge and best practices.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join FR',
          href: 'https://discord.gg/5KtfeRnfV8',
          target: '_blank',
        },
      },
      {
        title: 'Italy',
        description: 'Italian community connecting at local events and online.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join IT',
          href: 'https://discord.gg/sNSZcD28qU',
          target: '_blank',
        },
      },
      {
        title: 'Poland',
        description: 'Growing Polish community with active Discord presence.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join PL',
          href: 'https://discord.gg/aJna4V4EC4',
          target: '_blank',
        },
      },
      {
        title: 'UK & Ireland',
        description: 'United Kingdom and Ireland Mage-OS community.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join UK',
          href: 'https://discord.gg/NXdGxYHH7B',
          target: '_blank',
        },
      },
      {
        title: 'USA',
        description: 'American community with presence at major Magento events.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join US',
          href: 'https://discord.gg/Wam6pjhsTC',
          target: '_blank',
        },
      },
      {
        title: 'India',
        description: 'Active Indian developer community contributing to Mage-OS.',
        icon: 'tabler:flag',
        callToAction: {
          text: 'Join IN',
          href: 'https://discord.gg/dA3PqgBDy9',
          target: '_blank',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </Features3>

  <!-- Testimonials Widget ****************** -->

  <Testimonials
    title="Community Voices"
    tagline="What Our Members Say"
    testimonials={[
      {
        testimonial:
          "Collaborating closely with Mage-OS is not just about securing our clients' future; it's about actively shaping it, contributing to making Mage-OS even better.",
        name: 'Ignacio Riesco',
        job: 'CEO, Interactiv4',
      },
      {
        testimonial:
          "Making the decision to sponsor Mage-OS and become a gold partner was the easiest decision we've made. We are very excited for the future of the Magento platform.",
        name: 'Arron Moss',
        job: 'Co-founder, MDOQ',
      },
      {
        testimonial:
          'The Mage-OS community represents the best of what open source can be—collaborative, innovative, and focused on delivering real value to merchants and developers alike.',
        name: 'Vinai Kopp',
        job: 'Mage-OS Founding Member',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </Testimonials>

  <!-- Content Widget: Community Culture ****************** -->

  <Content
    isReversed
    tagline="Our Culture"
    title="A Community That Welcomes Everyone"
    items={[
      {
        title: 'Volunteer-Driven',
        description:
          'Our entire operation, including the board of directors, works on a volunteer basis. Every contribution makes a real difference.',
        icon: 'tabler:heart-handshake',
      },
      {
        title: 'Democratic Governance',
        description:
          'Members vote on resolutions, elect the board, and shape the project direction at our annual Assembly.',
        icon: 'tabler:gavel',
      },
      {
        title: 'Global Reach',
        description: 'From New York to Poland to Italy—Mage-OS contributors connect at Meet Magento events worldwide.',
        icon: 'tabler:world',
      },
      {
        title: 'Knowledge Sharing',
        description: 'Community members freely share expertise through documentation, blog posts, and mentorship.',
        icon: 'tabler:school',
      },
    ]}
    image={{
      src: communityGroup,
      alt: 'Mage-OS community members gathered together at the Opengento community event',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        From Magento's Roots to Mage-OS
      </h3>
      The Magento community has always been about sharing knowledge and collaboration. Since the early days of the platform,
      talented professionals have freely shared their expertise despite working for competing agencies and businesses. Mage-OS
      continues this tradition, reinvigorating open source commerce development.
    </Fragment>
  </Content>

  <!-- Pricing Widget: Membership Tiers ****************** -->

  <Pricing
    title="Individual Membership"
    subtitle="Support the project and get involved at the level that's right for you. All members get voting rights in our democratic governance."
    tagline="Join Us"
    prices={[
      {
        title: 'Community',
        subtitle: 'For individual supporters',
        price: 10,
        period: 'per year',
        items: [
          { description: 'Voting rights in elections and resolutions' },
          { description: 'Membership badge for your profile' },
          { description: 'Apply for grant funds' },
          { description: 'Participate in the annual Assembly' },
        ],
        callToAction: {
          text: 'Join as Community Member',
          href: 'https://opencollective.com/mage-os/contribute/community-member-44722/checkout',
          target: '_blank',
        },
      },
      {
        title: 'Professional',
        subtitle: 'For Magento professionals',
        price: 100,
        period: 'per year',
        items: [
          { description: 'All Community Member benefits' },
          { description: 'Professional badge and visibility' },
          { description: 'Enhanced influence in governance' },
          { description: 'LinkedIn profile listing' },
        ],
        callToAction: {
          text: 'Join as Professional',
          href: 'https://opencollective.com/mage-os/contribute/professional-44723/checkout',
          target: '_blank',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
    ]}
  />

  <!-- Partner Tiers Widget ****************** -->

  <PartnerTiers
    id="partner-tiers"
    title="Business Partner Tiers"
    subtitle="The more you donate, the more change we can impact. Partner with us to shape the future of open-source commerce."
    tagline="For Businesses & Agencies"
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </PartnerTiers>

  <!-- Steps2 Widget: How Funds Are Used ****************** -->

  <Steps2
    title="How Your Support Makes an Impact"
    subtitle="As a not-for-profit organization, we invest funds directly into the platform and community"
    items={[
      {
        title: 'Platform Development',
        description:
          'Fund new features, performance improvements, and security enhancements in the Mage-OS Distribution.',
        icon: 'tabler:code',
      },
      {
        title: 'Grant Programs',
        description: 'Support agency and independent developers through grants to work on platform improvements.',
        icon: 'tabler:gift',
      },
      {
        title: 'Community Operations',
        description: 'Enable infrastructure, events, documentation, and outreach to grow the ecosystem.',
        icon: 'tabler:users-group',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </Steps2>

  <!-- Features2 Widget: Connect ************** -->

  <Features2
    title="Connect With Us"
    tagline="Stay in Touch"
    columns={4}
    items={[
      {
        title: 'Discord',
        description:
          'Real-time chat with community members and developers. Join #tech for development or #general for everything else.',
        icon: 'tabler:brand-discord',
        callToAction: {
          text: 'Join Server',
          href: '/discord-channel',
        },
      },
      {
        title: 'GitHub',
        description:
          'Browse source code, submit issues, and contribute pull requests. Star the repo to show your support.',
        icon: 'tabler:brand-github',
        callToAction: {
          text: 'View Repos',
          href: 'https://github.com/mage-os',
          target: '_blank',
        },
      },
      {
        title: 'Mage-OS Lab',
        description:
          'Our innovation space where new features are tested and developed before joining the core distribution.',
        icon: 'tabler:flask',
        callToAction: {
          text: 'Explore Lab',
          href: 'https://github.com/mage-os-lab',
          target: '_blank',
        },
      },
      {
        title: 'LinkedIn',
        description: 'Follow us for announcements, community highlights, job opportunities, and ecosystem news.',
        icon: 'tabler:brand-linkedin',
        callToAction: {
          text: 'Follow Us',
          href: 'https://www.linkedin.com/company/81885701',
          target: '_blank',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget: Community FAQ ******************* -->

  <FAQs
    title="Community Questions"
    subtitle="Common questions about getting involved with Mage-OS"
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Do I need to be an experienced developer to contribute?',
        description:
          'Not at all! Contributions come in many forms: documentation, testing, translation, community support, marketing, and more. We welcome everyone regardless of technical skill level.',
      },
      {
        title: 'What happens at the weekly tech meetings?',
        description:
          'Contributors discuss ongoing development, review pull requests, plan upcoming features, and help newcomers get oriented. Meetings are casual and welcoming—feel free to just listen at first.',
      },
      {
        title: 'How is Mage-OS governed?',
        description:
          'Mage-OS is a not-for-profit association with democratic governance. Members vote on resolutions, elect the board of directors, and participate in the annual Assembly. All board members serve on a volunteer basis.',
      },
      {
        title: 'What are the membership benefits beyond voting?',
        description:
          'Members can apply for grant funds to work on platform improvements, receive membership badges for their profiles, get listed on our website, and have a direct voice in shaping the project direction.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Join Discord',
        href: '/discord-channel',
        icon: 'tabler:brand-discord',
      },
      {
        text: 'Become a Member',
        href: 'https://opencollective.com/mage-os',
        target: '_blank',
        icon: 'tabler:heart',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Get Involved? </Fragment>

    <Fragment slot="subtitle">
      Join developers, agencies, and merchants worldwide who are building the future of open-source ecommerce together.
      Your skills matter. Your voice matters. <strong>Every contribution matters.</strong>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </CallToAction>
</Layout>
