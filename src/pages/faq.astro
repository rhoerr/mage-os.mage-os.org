---

<Layout metadata={metadata}>
  <PageHero tagline="FAQ" variant="default">
    <Fragment slot="title">Frequently Asked Questions</Fragment>
    <Fragment slot="subtitle">
      Common questions about Mage-OS, the distribution, membership, and how to get involved.
    </Fragment>
  </PageHero>

  <!-- Jump Links as Pill Buttons -->
  <section class="px-4 sm:px-6 mx-auto lg:px-8 max-w-5xl py-8">
    <div class="flex flex-wrap justify-center gap-2">
      {
        sections.map((section) => (
          <a
            href={`#${section.id}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-primary/10 hover:text-primary dark:hover:bg-primary/20 dark:hover:text-primary transition-colors"
          >
            <Icon name={section.icon} class="w-4 h-4" />
            {section.label}
          </a>
        ))
      }
    </div>
  </section>

  <Callout type="info" title="Ready to Get Started?" class="mx-auto max-w-4xl px-4 mb-8">
    <p>
      Mage-OS is available now! Visit our <a href="/get-started" class="underline font-medium">Get Started guide</a> to install
      Mage-OS in under 30 minutes.
    </p>
  </Callout>

  <!-- FAQ Sections -->
  <section class="px-4 py-8 sm:px-6 mx-auto lg:px-8 max-w-4xl">
    <!-- Value Proposition -->
    <div id="value-proposition" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:star" class="w-7 h-7 text-icon" />
        Value Proposition
      </h2>
      <AccordionFAQ items={valuePropositionFAQ} defaultOpen={true} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- The Distribution -->
    <div id="the-distribution" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:package" class="w-7 h-7 text-icon" />
        The Distribution
      </h2>
      <AccordionFAQ items={distributionFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Vision & Sustainability -->
    <div id="vision-and-sustainability" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:rocket" class="w-7 h-7 text-icon" />
        Vision & Sustainability
      </h2>
      <AccordionFAQ items={visionFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Finances -->
    <div id="finances" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:wallet" class="w-7 h-7 text-icon" />
        Finances
      </h2>
      <Callout type="tip" title="Full Transparency" class="mb-6">
        <p>
          All Mage-OS finances are publicly visible through our <a
            href="https://opencollective.com/mage-os"
            target="_blank"
            rel="noopener noreferrer"
            class="underline font-medium">Open Collective</a
          > page.
        </p>
      </Callout>
      <AccordionFAQ items={financesFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Community -->
    <div id="community" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:users" class="w-7 h-7 text-icon" />
        Community
      </h2>
      <AccordionFAQ items={communityFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Ecosystem Compatibility -->
    <div id="ecosystem-compatibility" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:puzzle" class="w-7 h-7 text-icon" />
        Ecosystem Compatibility
      </h2>

      <div class="mb-8">
        <h3 class="text-lg font-semibold mb-4 dark:text-white">Full Compatibility with Magento</h3>
        <ItemGrid
          columns={3}
          items={compatibilityItems}
          classes={{
            container: 'gap-4 md:gap-6',
            panel: 'bg-gray-50 dark:bg-gray-800/50 p-4 rounded-lg',
            title: 'text-base',
            description: 'text-sm',
          }}
        />
      </div>

      <AccordionFAQ items={ecosystemFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Usage -->
    <div id="usage" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:settings" class="w-7 h-7 text-icon" />
        Usage
      </h2>
      <AccordionFAQ items={usageFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Contribution -->
    <div id="contribution" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:git-pull-request" class="w-7 h-7 text-icon" />
        Contribution
      </h2>
      <AccordionFAQ items={contributionFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Technology -->
    <div id="technology" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:code" class="w-7 h-7 text-icon" />
        Technology
      </h2>
      <AccordionFAQ items={technologyFAQ} />
    </div>

    <hr class="border-gray-200 dark:border-gray-700 my-8" />

    <!-- Getting Help -->
    <div id="getting-help" class="mb-12 scroll-mt-24">
      <h2 class="flex items-center gap-3 text-2xl font-bold font-heading mb-6 dark:text-white">
        <Icon name="tabler:help-circle" class="w-7 h-7 text-icon" />
        Getting Help
      </h2>
      <AccordionFAQ items={helpFAQ} />
    </div>
  </section>

  <!-- More Questions Section -->
  <section class="bg-gray-50 dark:bg-slate-800/50 py-16">
    <div class="px-4 sm:px-6 mx-auto lg:px-8 max-w-4xl text-center">
      <h2 class="text-3xl font-bold font-heading mb-4 dark:text-white">More Questions?</h2>
      <p class="text-xl text-muted mb-8">
        If you don't find your answer here, we're here to help. We welcome feedback on this FAQ!
      </p>

      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/discord-channel"
          class="inline-flex items-center gap-2 px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium"
        >
          <Icon name="tabler:brand-discord" class="w-5 h-5" />
          Join Discord
        </a>
        <a
          href="mailto:info@mage-os.org"
          class="inline-flex items-center gap-2 px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors font-medium"
        >
          <Icon name="tabler:mail" class="w-5 h-5" />
          Email Us
        </a>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors font-medium"
        >
          <Icon name="tabler:message" class="w-5 h-5" />
          Contact Form
        </a>
      </div>
    </div>
  </section>
</Layout>
