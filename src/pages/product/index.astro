---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Mage-OS Distribution | Community-Driven Magento Alternative',
  description:
    'Mage-OS Distribution is a community-driven open-source ecommerce platform built on Magento Open Source 2.4.8. Experience enhanced performance, faster security patches, and innovation without vendor lock-in.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="The Mage-OS Distribution"
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Free',
        href: '/get-started/quick-start',
        icon: 'tabler:download',
      },
      { text: 'Explore Features', href: '/product/features', icon: 'tabler:arrow-right' },
    ]}
  >
    <Fragment slot="title">
      Enterprise-Grade Commerce,<br />
      <span class="text-accent dark:text-white">Open Source</span>
    </Fragment>

    <Fragment slot="subtitle">
      Mage-OS Distribution is a community-owned ecommerce platform built on Magento Open Source 2.4.8-p3. Get faster
      security patches, enhanced performance, and innovative features developed by a global community of merchants,
      developers, and agencies. 100% compatible with existing Magento extensions.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <!--<Stats
    title="Built on Solid Foundations"
    subtitle="Proven technology, active community, zero licensing costs"
    stats={[
      { title: 'Based On', amount: 'Magento 2.4.8-p3' },
      { title: 'Extension Compatible', amount: '5000+' },
      { title: 'Active Contributors', amount: '100+' },
      { title: 'License Cost', amount: 'Free Forever' },
    ]}
  />-->

  <!-- Features Widget *************** -->

  <Features
    id="what-we-offer"
    tagline="What We Offer"
    title="Everything You Need for Modern Commerce"
    subtitle="Mage-OS combines the reliability of Magento with community-driven innovation to deliver a platform that works for your business."
    items={[
      {
        title: 'Full Magento Compatibility',
        description:
          '100% compatible with Magento Open Source extensions, themes, and integrations. Your existing ecosystem works out of the box with minimal friction.',
        icon: 'tabler:plug-connected',
        callToAction: {
          text: 'Compatibility Info',
          href: '/product#faq',
        },
      },
      {
        title: 'Faster Security Patches',
        description:
          'Critical security fixes are published in an update as soon as they are validated by the community. No waiting for corporate release schedules.',
        icon: 'tabler:shield-check',
        callToAction: {
          text: 'Security Features',
          href: '/product/features#security',
        },
      },
      {
        title: 'Enhanced Performance',
        description:
          'Optimized caching and modern technologies deliver faster page loads and better Core Web Vitals scores.',
        icon: 'tabler:bolt',
        callToAction: {
          text: 'Performance Features',
          href: '/product/features#performance',
        },
      },
      {
        title: 'Transparent Governance',
        description:
          'All decisions, releases, and roadmap discussions are public. Every contributor can influence the direction of the project.',
        icon: 'tabler:users',
        callToAction: {
          text: 'About the Association',
          href: '/about',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <!-- Steps Widget - Migration Path **************** -->

  <Steps
    title="Already on Magento? Migrating is Simple"
    subtitle="Switch from Magento Open Source to Mage-OS in minutes, not months"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Update Your Repository</span>',
        description:
          'Point your composer.json to the Mage-OS repository. Your existing code and customizations remain untouched.',
        icon: 'tabler:git-branch',
      },
      {
        title: 'Step 2: <span class="font-medium">Run Composer Update</span>',
        description:
          'A single <code class="bg-gray-100 dark:bg-gray-800 px-1 rounded">composer update</code> command pulls in the Mage-OS packages while maintaining full compatibility.',
        icon: 'tabler:terminal-2',
      },
      {
        title: 'Step 3: <span class="font-medium">Deploy & Verify</span>',
        description:
          'Run your standard deployment process. All extensions, themes, and integrations continue working seamlessly.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Welcome to Mage-OS!',
        description: 'Enjoy faster security patches, community-driven features, and transparent governance.',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Migration from Magento to Mage-OS',
    }}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </Steps>

  <!-- Content Widget - Mage-OS Lab **************** -->

  <Content
    isReversed
    tagline="Innovation"
    title="The Mage-OS Lab: Where Innovation Develops"
    items={[
      {
        title: 'Community Innovation Space',
        description:
          'The Lab is where community members experiment, develop, and perfect new features before they graduate to the core distribution.',
      },
      {
        title: 'Real-World Improvements',
        description:
          'Features like PCI DSS 4.0 compliance, AI-powered translation, and theme optimization started as Lab projects.',
      },
      {
        title: 'Open Contribution',
        description:
          'Everyone is welcome to contribute modules, improvements, and ideas. Join us on GitHub to get involved.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1517694712202-14dd9538aa97?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Mage-OS Lab Development',
    }}
    callToAction={{
      text: 'Explore the Mage-OS Lab on GitHub',
      href: 'https://github.com/mage-os-lab',
      icon: 'tabler:brand-github',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Community-Driven Innovation</h3>
      Every feature in Mage-OS represents dedicated work by talented developers who believe in pushing the platform forward.
    </Fragment>
  </Content>

  <!-- Features2 Widget - Explore ************** -->

  <Features2
    title="Explore the Product"
    tagline="Learn More"
    columns={4}
    items={[
      {
        title: 'Features',
        description: 'Deep dive into performance, security, and innovation capabilities that set Mage-OS apart.',
        icon: 'tabler:list-check',
        callToAction: {
          text: 'View Features',
          href: '/product/features',
        },
      },
      {
        title: 'Get Started',
        description: 'Start using Mage-OS today with our quick installation guides and migration resources.',
        icon: 'tabler:rocket',
        callToAction: {
          text: 'Get Started',
          href: '/get-started',
        },
      },
      {
        title: 'Roadmap',
        description: "See what's coming next and how you can influence the direction of the platform.",
        icon: 'tabler:map',
        callToAction: {
          text: 'View Roadmap',
          href: '/product/roadmap',
        },
      },
      {
        title: 'Releases',
        description: 'Download the latest version and review detailed release notes and changelogs.',
        icon: 'tabler:package',
        callToAction: {
          text: 'View Releases',
          href: '/product/releases',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-orange-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    tagline="Product FAQ"
    id="faq"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What is the difference between Mage-OS and Magento Open Source?',
        description:
          'Mage-OS is an upstream-compatible distribution built on top of Magento Open Source. We include all the same core functionality plus community-developed enhancements like faster security patches, performance optimizations, PCI DSS 4.0 compliance features, and AI-powered translation tools.',
      },
      {
        title: 'Will my existing Magento extensions work with Mage-OS?',
        description:
          'Yes. Mage-OS maintains 100% compatibility with existing Magento 2 extensions, themes, and integrations. We carefully evaluate every change to ensure your ecosystem continues working seamlessly.',
      },
      {
        title: 'How difficult is it to migrate from Magento to Mage-OS?',
        description:
          'Migration is straightforward and typically takes 15-30 minutes. Update your composer.json to use the Mage-OS repository, run composer update, and deploy. No code changes are required in most cases.',
      },
      {
        title: 'Is there a cost to use Mage-OS?',
        description:
          'Mage-OS Distribution is completely free and open source under the GPLv3 license. There are no licensing fees, no vendor lock-in, and no hidden costs. The project is funded by community contributions and partnerships.',
      },
      {
        title: 'How does Mage-OS handle security patches?',
        description:
          'Security issues are prioritized and fixed quickly through an open, transparent review process. Critical patches ship as soon as they are validated by the community, not on quarterly corporate schedules.',
      },
      {
        title: 'Can I migrate back to Magento if needed?',
        description:
          'Yes. Mage-OS maintains full database and API compatibility with Magento Open Source. Migration back to upstream is documented and supported if your needs change.',
      },
    ]}
  />

  <!-- Testimonials Widget ************ -->

  <Testimonials
    title="Trusted by the Magento Community"
    subtitle="Hear what agencies, developers, and merchants say about Mage-OS"
    testimonials={[
      {
        testimonial: `Collaborating closely with Mage-OS is not just about securing our clients' future; it's about actively shaping it, contributing to making Mage-OS even better.`,
        name: 'Ignacio Riesco',
        job: 'CEO, Interactiv4',
      },
      {
        testimonial: `Making the decision to sponsor Mage-OS and become a gold partner was the easiest decision we've made. We are very excited for the future of the Magento platform.`,
        name: 'Arron Moss',
        job: 'Co-founder, MDOQ',
      },
      {
        testimonial: `The Mage-OS community represents the best of what open source can be: collaborative, innovative, and focused on delivering real value to merchants and developers alike.`,
        name: 'Community Member',
        job: 'Mage-OS Contributor',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-indigo-50 dark:bg-transparent"></div>
    </Fragment>
  </Testimonials>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Mage-OS',
        href: '/get-started/quick-start',
        icon: 'tabler:download',
      },
      {
        text: 'Migration Guide',
        href: '/get-started/migration-guide',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title"> Ready to Experience Mage-OS? </Fragment>

    <Fragment slot="subtitle">
      Join the many merchants and developers who have chosen community-driven commerce. Download the distribution today
      and see why Mage-OS is the future of open-source ecommerce.
    </Fragment>
  </CallToAction>
</Layout>
