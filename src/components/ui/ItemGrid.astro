---
import type { ItemGrid as Props } from '~/types';
import { twMerge } from 'tailwind-merge';
import { Icon } from 'astro-icon/components';

const { items = [], columns, defaultIcon = '', classes = {} } = Astro.props;

const {
  container: containerClass = '',
  panel: panelClass = '',
  title: titleClass = '',
  description: descriptionClass = '',
  icon: defaultIconClass = 'text-icon',
  action: actionClass = '',
} = classes;
---

{
  items && items.length > 0 && (
    <div
      class={twMerge(
        `grid mx-auto gap-8 md:gap-y-12 ${
          columns === 4
            ? 'grid-cols-2 lg:grid-cols-4'
            : columns === 3
              ? 'grid-cols-2 lg:grid-cols-3'
              : columns === 2
                ? 'sm:grid-cols-2 '
                : ''
        }`,
        containerClass
      )}
    >
      {items.map(({ title, description, icon, callToAction, classes: itemClasses = {} }) => {
        const hasLink = callToAction?.href;
        const CardWrapper = hasLink ? 'a' : 'div';
        const wrapperProps = hasLink
          ? {
              href: callToAction.href,
              target: callToAction.target,
              rel: callToAction.target === '_blank' ? 'noopener noreferrer' : undefined,
            }
          : {};

        return (
          <div class="h-full">
            <CardWrapper
              {...wrapperProps}
              class={twMerge(
                'flex flex-row max-w-md h-full',
                hasLink && 'group cursor-pointer transition-transform duration-200 hover:scale-[1.02]',
                panelClass,
                itemClasses?.panel
              )}
            >
              <div class="flex justify-center flex-shrink-0">
                {(icon || defaultIcon) && (
                  <Icon
                    name={icon || defaultIcon}
                    class={twMerge('w-7 h-7 mr-2 rtl:mr-0 rtl:ml-2', defaultIconClass, itemClasses?.icon)}
                    aria-hidden="true"
                  />
                )}
              </div>
              <div class="mt-0.5 flex-1 flex flex-col">
                {title && (
                  <h3
                    class={twMerge(
                      'text-xl font-bold',
                      hasLink && 'group-hover:text-primary transition-colors',
                      titleClass,
                      itemClasses?.title
                    )}
                  >
                    {title}
                  </h3>
                )}
                {description && (
                  <p
                    class={twMerge(
                      `${title ? 'mt-3' : ''} text-muted flex-grow`,
                      descriptionClass,
                      itemClasses?.description
                    )}
                    set:html={description}
                  />
                )}
                {callToAction && (
                  <div
                    class={twMerge(
                      `${title || description ? 'mt-3' : ''} flex items-center`,
                      actionClass,
                      itemClasses?.actionClass
                    )}
                  >
                    <span class="text-link font-medium group-hover:underline">
                      {callToAction.text}
                    </span>
                    <Icon
                      name="tabler:chevron-right"
                      class="w-7 h-7 text-gray-600 dark:text-slate-400 group-hover:text-primary transition-colors flex-shrink-0 ml-auto"
                    />
                  </div>
                )}
              </div>
            </CardWrapper>
          </div>
        );
      })}
    </div>
  )
}
