---
import { Icon } from 'astro-icon/components';
import type { CallToAction } from '~/types';

export interface Props {
  icon?: string;
  title?: string;
  description?: string;
  callToAction?: CallToAction;
  variant?: 'info' | 'success' | 'warning' | 'default';
}

const {
  icon = 'tabler:info-circle',
  title = await Astro.slots.render('title'),
  description = await Astro.slots.render('description'),
  callToAction,
  variant = 'default',
} = Astro.props;

// Flowbite-style alert color schemes
const variantStyles = {
  default: {
    bg: 'bg-primary/10 dark:bg-primary/20',
    border: 'border-primary/30',
    text: 'text-primary dark:text-primary',
    icon: 'text-primary',
  },
  info: {
    bg: 'bg-blue-50 dark:bg-blue-900/30',
    border: 'border-blue-300 dark:border-blue-800',
    text: 'text-blue-800 dark:text-blue-300',
    icon: 'text-blue-500 dark:text-blue-400',
  },
  success: {
    bg: 'bg-green-50 dark:bg-green-900/30',
    border: 'border-green-300 dark:border-green-800',
    text: 'text-green-800 dark:text-green-300',
    icon: 'text-green-500 dark:text-green-400',
  },
  warning: {
    bg: 'bg-amber-50 dark:bg-amber-900/30',
    border: 'border-amber-300 dark:border-amber-800',
    text: 'text-amber-800 dark:text-amber-300',
    icon: 'text-amber-500 dark:text-amber-400',
  },
};

const styles = variantStyles[variant];
---

<section class="not-prose">
  <div
    class={`max-w-6xl mx-auto px-4 sm:px-6 py-4 flex flex-col sm:flex-row items-center justify-center gap-3 text-sm ${styles.bg} border-y ${styles.border}`}
    role="alert"
  >
    <div class="flex items-center gap-2">
      <Icon name={icon} class={`w-5 h-5 shrink-0 ${styles.icon}`} />
      {title && <span class={`font-semibold ${styles.text}`} set:html={title} />}
    </div>
    {description && <span class={`${styles.text}`} set:html={description} />}
    {
      callToAction && (
        <a
          href={callToAction.href}
          class={`inline-flex items-center font-medium ${styles.text} hover:underline whitespace-nowrap`}
        >
          {callToAction.text}
          <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
        </a>
      )
    }
  </div>
</section>
