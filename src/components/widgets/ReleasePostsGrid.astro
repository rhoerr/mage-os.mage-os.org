---
import { Icon } from 'astro-icon/components';
import type { Post } from '~/types';
import { getPermalink } from '~/utils/permalinks';
import { getFormattedDate } from '~/utils/utils';

export interface Props {
  posts: Post[];
  title?: string;
}

const { posts, title = 'Release Announcements' } = Astro.props;
---

<section class="mt-12">
  <h2 class="text-3xl font-bold tracking-tight mb-6 font-heading">{title}</h2>
  <div class="grid gap-6 md:grid-cols-2">
    {
      posts.map((post) => (
        <article class="border dark:border-slate-700 rounded-lg p-6 hover:shadow-lg transition bg-white dark:bg-slate-800">
          <div class="text-sm text-muted dark:text-slate-400 mb-2">
            <Icon name="tabler:clock" class="w-3.5 h-3.5 inline-block -mt-0.5" />
            <time datetime={String(post.publishDate)}>{getFormattedDate(post.publishDate)}</time>
          </div>
          <h3 class="text-xl font-bold mb-3 font-heading dark:text-slate-300">
            <a
              href={getPermalink(post.permalink, 'post')}
              class="hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200"
            >
              {post.title}
            </a>
          </h3>
          {post.excerpt && <p class="text-muted dark:text-slate-400 text-sm line-clamp-3 mb-4">{post.excerpt}</p>}
          <a
            href={getPermalink(post.permalink, 'post')}
            class="inline-flex items-center text-primary dark:text-blue-400 hover:underline text-sm font-medium"
          >
            Read full announcement
            <Icon name="tabler:chevron-right" class="w-4 h-4 ml-1" />
          </a>
        </article>
      ))
    }
  </div>
</section>
