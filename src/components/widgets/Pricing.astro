---
import { Icon } from 'astro-icon/components';
import Button from '~/components/ui/Button.astro';
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Pricing as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  prices = [],

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-5xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />
  <div class="flex items-stretch justify-center">
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 w-full">
      {
        prices &&
          prices.map(({ title, subtitle, price, period, items, callToAction, hasRibbon = false, ribbonTitle }) => (
            <div class="relative flex">
              {price !== undefined && period && (
                <div
                  class={`w-full flex flex-col p-6 bg-white dark:bg-gray-800 rounded-lg border-2 ${
                    hasRibbon
                      ? 'border-primary shadow-lg shadow-primary/10 dark:shadow-primary/20 scale-[1.02]'
                      : 'border-gray-200 dark:border-gray-700 shadow-sm'
                  } hover:shadow-md transition-shadow`}
                >
                  {/* Ribbon */}
                  {hasRibbon && ribbonTitle && (
                    <span class="absolute -top-3 left-1/2 -translate-x-1/2 inline-flex items-center px-3 py-1 rounded-full text-xs font-bold uppercase bg-primary text-white shadow-md">
                      {ribbonTitle}
                    </span>
                  )}

                  {/* Header */}
                  <div class="text-center mb-6">
                    {title && (
                      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{title}</h3>
                    )}
                    {subtitle && (
                      <p class="text-sm text-gray-500 dark:text-gray-400">{subtitle}</p>
                    )}
                  </div>

                  {/* Price */}
                  <div class="flex items-baseline justify-center mb-6">
                    <span class="text-3xl font-bold text-gray-900 dark:text-white">â‚¬</span>
                    <span class="text-5xl font-extrabold tracking-tight text-gray-900 dark:text-white">{price}</span>
                    <span class="ml-1 text-gray-500 dark:text-gray-400">/{period.replace('per ', '')}</span>
                  </div>

                  {/* Features */}
                  {items && (
                    <ul class="space-y-3 mb-8 flex-grow">
                      {items.map(
                        ({ description, icon }) =>
                          description && (
                            <li class="flex items-start">
                              <svg
                                class="w-5 h-5 text-primary shrink-0 mt-0.5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                              >
                                <path
                                  stroke-linecap="round"
                                  stroke-linejoin="round"
                                  stroke-width="2"
                                  d="M5 13l4 4L19 7"
                                />
                              </svg>
                              <span class="ml-3 text-gray-600 dark:text-gray-300">{description}</span>
                            </li>
                          )
                      )}
                    </ul>
                  )}

                  {/* CTA */}
                  {callToAction && (
                    <div class="mt-auto">
                      {typeof callToAction === 'string' ? (
                        <Fragment set:html={callToAction} />
                      ) : (
                        callToAction.href && (
                          <a
                            href={callToAction.href}
                            target={callToAction.target}
                            class={`block w-full text-center px-5 py-3 text-sm font-semibold rounded-lg transition-colors ${
                              hasRibbon
                                ? 'bg-primary text-white hover:bg-primary/90'
                                : 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white hover:bg-gray-200 dark:hover:bg-gray-600'
                            }`}
                          >
                            {callToAction.text}
                          </a>
                        )
                      )}
                    </div>
                  )}
                </div>
              )}
            </div>
          ))
      }
    </div>
  </div>
</WidgetWrapper>
